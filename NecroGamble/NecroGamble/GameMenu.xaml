<Page
    x:Class="NecroGamble.GameMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NecroGamble"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Width="Auto" Height="Auto" Background="Blue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*" />
            <ColumnDefinition Width="2.8*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.02*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.6*" />
            <RowDefinition Height="2.4*" />
            <RowDefinition Height="0.9*"/>
            <RowDefinition Height="0.03*"/>
        </Grid.RowDefinitions>
        <Image Source="/Assets/PartidaMenu/backgroundPartida.jpg" Grid.ColumnSpan="4" Grid.RowSpan="4" Stretch="Fill"/>
        <Button Style="{StaticResource ButtonRevealStyle}" Background="White" Foreground="Black" 
                FontWeight="Bold" Content="Throw" Grid.Row="2" Grid.Column="1" FontSize="40" 
                Margin="154,0,0,0"  VerticalAlignment="Center" Width="169" Height="63" />
        <Rectangle Fill="White" Opacity="0.8" Grid.Row="2" Grid.Column="1" Margin="361,34,773,63"/>
        <Image Source="/Assets/PartidaMenu/moneda.png" Grid.Row="2" Grid.Column="1" Margin="361,34,773,63"/>
        <Rectangle Fill="White" Opacity="0.8" Grid.Row="2" Grid.Column="1" Margin="602,36,377,61"/>
        <Image Source="/Assets/PartidaMenu/dadosCaminar.png" Grid.Row="2" Grid.Column="1" Margin="461,41,404,65"/>
        <Image Source="/Assets/PartidaMenu/dadoTrampa.png" Grid.Row="2" Grid.Column="1" Margin="624,41,241,65"/>
        <Button Style="{StaticResource ButtonRevealStyle}" Background="White" Foreground="Black"  
                Content="Throw only one" Grid.Row="2" Grid.Column="1" FontSize="30" Margin="661,187,0,0" 
                Width="225" Height="52" VerticalAlignment="Top" />
        <Grid Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.4*" />
                <ColumnDefinition Width="2.5*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button Style="{StaticResource ButtonRevealStyle}" Background="Transparent"
                Width="100" Height="100" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="/Assets/PartidaMenu/Pause.png" Stretch="UniformToFill"/>
            </Button>
            <ProgressBar Grid.Column="1" Width="700" Height="20" Value="80" Foreground="Red" Background="White" CornerRadius="8"/>
            <Image Source="/Assets/PartidaMenu/muerteVida.png" Grid.Column="1" Margin="67,-1,827,32"/>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1" Background="White" Opacity="0.8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Rectangle Grid.Column="10" Grid.RowSpan="7" Grid.ColumnSpan="3"
                       Fill="IndianRed" Opacity="0.8"/>
            <Rectangle Grid.Column="0" Grid.RowSpan="7" Grid.ColumnSpan="2"
                       Fill="LightGreen" Opacity="0.8"/>
            <Rectangle Grid.Row="0" Grid.ColumnSpan="13" 
                Fill="Black" RadiusX="1" RadiusY="1" Height="4" VerticalAlignment="Top"/>
            <Rectangle Grid.Row="1" Grid.ColumnSpan="13" 
                Fill="Black" RadiusX="1" RadiusY="1" Height="4" VerticalAlignment="Top"/>
            <Rectangle Grid.Row="2" Grid.ColumnSpan="13" 
                Fill="Black" RadiusX="1" RadiusY="1" Height="4" VerticalAlignment="Top"/>
            <Rectangle Grid.Row="3" Grid.ColumnSpan="13" 
                Fill="Black" RadiusX="1" RadiusY="1" Height="4" VerticalAlignment="Top"/>
            <Rectangle Grid.Row="4" Grid.ColumnSpan="13" 
                Fill="Black" RadiusX="1" RadiusY="1" Height="4" VerticalAlignment="Top"/>
            <Rectangle Grid.Row="5" Grid.ColumnSpan="13" 
                Fill="Black" RadiusX="1" RadiusY="1" Height="4" VerticalAlignment="Top"/>
            <Rectangle Grid.Row="6" Grid.ColumnSpan="13" 
                Fill="Black" RadiusX="1" RadiusY="1" Height="4" VerticalAlignment="Top"/>
            <Rectangle Grid.Row="6" Grid.ColumnSpan="13" 
                Fill="Black" RadiusX="1" RadiusY="1" Height="4" VerticalAlignment="Bottom"/>

            <Rectangle Grid.Column="0" Grid.RowSpan="7" 
                Fill="Black" RadiusX="1" RadiusY="1" Width="4" HorizontalAlignment="Left"/>
            <Rectangle Grid.Column="1" Grid.RowSpan="7" 
                Fill="Black" RadiusX="1" RadiusY="1" Width="4" HorizontalAlignment="Left"/>
            <Rectangle Grid.Column="2" Grid.RowSpan="7" 
                Fill="Black" RadiusX="1" RadiusY="1" Width="4" HorizontalAlignment="Left"/>
            <Rectangle Grid.Column="3" Grid.RowSpan="7" 
                Fill="Black" RadiusX="1" RadiusY="1" Width="4" HorizontalAlignment="Left"/>
            <Rectangle Grid.Column="4" Grid.RowSpan="7" 
                Fill="Black" RadiusX="1" RadiusY="1" Width="4" HorizontalAlignment="Left"/>
            <Rectangle Grid.Column="5" Grid.RowSpan="7" 
                Fill="Black" RadiusX="1" RadiusY="1" Width="4" HorizontalAlignment="Left"/>
            <Rectangle Grid.Column="6" Grid.RowSpan="7" 
                Fill="Black" RadiusX="1" RadiusY="1" Width="4" HorizontalAlignment="Left"/>
            <Rectangle Grid.Column="7" Grid.RowSpan="7" 
                Fill="Black" RadiusX="1" RadiusY="1" Width="4" HorizontalAlignment="Left"/>
            <Rectangle Grid.Column="8" Grid.RowSpan="7" 
                Fill="Black" RadiusX="1" RadiusY="1" Width="4" HorizontalAlignment="Left"/>
            <Rectangle Grid.Column="9" Grid.RowSpan="7" 
                Fill="Black" RadiusX="1" RadiusY="1" Width="4" HorizontalAlignment="Left"/>
            <Rectangle Grid.Column="10" Grid.RowSpan="7" 
                Fill="Black" RadiusX="1" RadiusY="1" Width="4" HorizontalAlignment="Left"/>
            <Rectangle Grid.Column="11" Grid.RowSpan="7" 
                Fill="Black" RadiusX="1" RadiusY="1" Width="4" HorizontalAlignment="Left"/>
            <Rectangle Grid.Column="12" Grid.RowSpan="7" 
                Fill="Black" RadiusX="1" RadiusY="1" Width="4" HorizontalAlignment="Left"/>
            <Rectangle Grid.Column="12" Grid.RowSpan="7" 
                Fill="Black" RadiusX="1" RadiusY="1" Width="4" HorizontalAlignment="Right"/>
        </Grid>

        <Grid Grid.Column="2" Grid.Row="0" Grid.RowSpan="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="4*" />
            </Grid.RowDefinitions>
            <Rectangle Fill="Gray" Grid.Row="1" Height="153" VerticalAlignment="Top" Margin="23,10,10,10"/>
            <Image Source="/Assets/PartidaMenu/arquero.png"  Grid.Row="1" VerticalAlignment="Top" Margin="90,51,77,0" Height="112" Stretch="Uniform"/>
            <Rectangle Fill="LightGray" Grid.Row="1" Height="388" VerticalAlignment="Bottom" Margin="23,0,10,20"/>
            <TextBlock x:Name="infoText"  Grid.Row="1" Height="381" VerticalAlignment="Top" Margin="35,173,20,0" HorizontalAlignment="Center" TextWrapping="WrapWholeWords">
                <Span FontFamily="Aclonica" Foreground="Black" FontSize="30">
                    El <Bold>Dado de Ataque Rápido</Bold> tiene:
                </Span>
                <LineBreak/>
                <LineBreak/>
                <Span FontFamily="Aclonica" Foreground="Black" FontSize="23">
                     <Bold>3</Bold> caras que provocan <Bold>1</Bold> <Italic>punto de daño</Italic> al enemigo
                </Span>
                <LineBreak/>
                <LineBreak/>
                <Span FontFamily="Aclonica" Foreground="Black" FontSize="23">
                     <Bold>2</Bold> caras que provocan <Bold>2</Bold> <Italic>puntos de daño</Italic> al enemigo
                </Span>
                <LineBreak/>
                <LineBreak/>
                <Span FontFamily="Aclonica" Foreground="Black" FontSize="23">
                     <Bold>1</Bold> cara vacía sin efecto
                </Span>

            </TextBlock>

            <Grid Grid.Row="0" HorizontalAlignment="Center" Margin="0, 10, 0, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Grid.Column="1">
                    <Rectangle Fill="Red"/>
                    <Image Source="/Assets/PartidaMenu/arquero.png"  VerticalAlignment="Center" Margin="10,10,10,10" />
                </Grid>
                <Image Source="/Assets/PartidaMenu/muerte.png" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="10,10,10,10" Stretch="Uniform"/>
                <Image Source="/Assets/PartidaMenu/caballero.png" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Margin="10,10,10,10" Stretch="Uniform"/>
                <Image Source="/Assets/PartidaMenu/tercio.png" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Margin="10,10,10,10" Stretch="Uniform"/>
                <Image Source="/Assets/PartidaMenu/flecha.png" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Margin="10,10,10,10" Stretch="Uniform"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
